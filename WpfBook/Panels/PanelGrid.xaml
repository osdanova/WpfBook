<UserControl x:Class="WpfBook.Panels.PanelGrid"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WpfBook.Panels"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Background="Black" ShowGridLines="True">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="100" />
            <ColumnDefinition />
            <ColumnDefinition Width="2*"  />
            <ColumnDefinition Width="100" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>
        <Canvas Grid.Column="1" Grid.Row="0" Background="Red"></Canvas>
        <Canvas Grid.Column="2" Grid.Row="1" Background="Blue"></Canvas>
        <Canvas Grid.Column="0" Grid.Row="2" Background="Green" Grid.ColumnSpan="3"></Canvas>
        <Canvas Grid.Column="3" Grid.Row="2" Background="Yellow" Grid.RowSpan="2"></Canvas>
    </Grid>
</UserControl>
